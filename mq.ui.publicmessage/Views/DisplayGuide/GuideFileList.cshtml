@using System.Web.Optimization
@using mq.application.common
@using mq.application.webmvc
@model  List<mq.model.dbentity.V_BG_DisplayGuideFile_User>
@{
    ViewBag.Title = "陈列指引文件列表";
    Layout = "~/Views/Share/_BootStrapLayout.cshtml";
}
@section head
{
    @Scripts.Render( "~/libs/layer/layer")
    <style type="text/css">
        .col-sm-2 {
            width: 10%;
            margin-top: 7px;
        }

        .table thead th label {
            margin-bottom: 0;
        }

        .table thead th {
            vertical-align: middle;
            text-align: center;
            background-color: rgb(242, 242, 242);
        }

        .table tbody tr td {
            vertical-align: middle;
            text-align: center;
        }

        .table thead .select {
            width: 3%;
        }

        .table thead .time {
            width: 7%;
        }

        .table thead .file {
            width: 20%;
        }

        .table thead .theme {
            width: 20%;
        }

        .table thead .person {
            width: 8%;
        }

    </style>
}
<div>
    <div class="row clearfix">
        <div class="col-md-12 column">
            <ul class="breadcrumb">
                <li>
                    <a href="#">首页</a>
                </li>
                <li class="active">陈列指引文件列表</li>
            </ul>
            <table class="table table-bordered  table-striped table-hover">
                <thead>
                    <tr>
                        <th class="time">发布时间</th>
                        <th class="file">文 件</th>
                        <th class="theme">主 题</th>
                        <th class="person">发布人</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var guideFile in Model)
                    {
                        <tr>
                            <td>@guideFile.PublishTime.ToDateTime(DateTime.MaxValue).ToString("yyyy/MM/dd HH:mm:ss")</td>
                            <td>
                                <a href="@(Url.Action("DownloadFilePathResult", new { filepath = guideFile.FilePath, fileorgname = HttpUtility.UrlEncode(guideFile.FileOriginName), fileytpe = guideFile.FileType }))">@guideFile.FileOriginName</a>
                            </td>
                            <td>@guideFile.Title</td>
                            <td>@guideFile.Name</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>