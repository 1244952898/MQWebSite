@using System.Web.Optimization
@using koala.application.common
@using mq.application.webmvc
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @Styles.Render("~/libs/layui/layui/css/layui")
    @Scripts.Render("~/js/jquery", "~/libs/layui/layui/layui")
    @RenderSection("head", false)
    <style type="text/css">
        .logo img {
            width: 51px;
            height: 47px;
        }

        .dx-header {
            border-bottom: 0 !important;
        }

        ::-webkit-scrollbar {
            width: 5px;
            height: 5px;
            background-color: #fff;
        }

        .dx-header .layui-main {
            margin: 0;
        }

        .dx-header .logo {
            position: absolute;
            width: 210px;
            z-index: 2;
            line-height: 70px;
            text-align: center;
        }

        .dx-header .title {
            font-size: 24px;
            color: #c4c4c4;
            position: absolute;
            left: 235px;
            line-height: 70px;
        }

        .dx-nav {
            position: absolute;
            right: 0;
        }

        .dx-nav li {
            float: left;
            color: #d8d8d8;
            font-size: 14px;
            line-height: 70px;
            padding: 0 20px;
            position: relative;
            cursor: pointer;
        }

        .dx-nav li span:first-child {
            margin-right: 10px;
            display: inline-block;
            width: 38px;
            height: 38px;
            background-color: #424e5c;
            border-radius: 50%;
            line-height: 38px;
            text-align: center;
            vertical-align: middle;
        }

        .dx-nav li i {
            font-size: 18px;
            color: #242b33;
        }

        .dx-nav li:last-child {
            padding-right: 30px;
        }

        .icon-moban162 {
            font-family: iconfont !important;
            font-size: 16px;
            font-style: normal;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            background: url('@(DomainUrlHelper.SourchPath)/Images/userInfo-myicon2-1.png') no-repeat;
            background-position: center center;
            width: 20px;
            height: 20px;
        }

        .icon-moban162:hover {
            background: url('@(DomainUrlHelper.SourchPath)/Images/userInfo-myicon2-2.png') no-repeat;
            background-position: center center;
        }

        .icon-moban163 {
            background: url('@(DomainUrlHelper.SourchPath)/Images/closed.png') no-repeat;
            -ms-background-size: 20px 20px;
            background-size: 20px 20px;
            background-position: center center;
        }

        .icon-moban163:hover {
            -ms-background-size: 20px 20px;
            background-size: 20px 20px;
            background: url('@(DomainUrlHelper.SourchPath)/Images/close_a.png') no-repeat;
            background-position: center center;
        }

        .layui-nav-item {
            background-color: rgb(52, 57, 61);
        }
        .layui-nav-child dd {
            background-color: rgb(64, 69, 75);
        }
        .layui-nav-child dd a {
            padding-left: 40px !important;
        }

    </style>

</head>
<body class="layui-layout layui-layout-admin">

    <div class="layui-header">
        <div class="layui-header dx-header header header-demo">
            <div class="layui-main">
                <a class="logo" href="/">
                    <img src="@(DomainUrlHelper.SourchPath)/Images/MXlogo.jpg" alt="layui">
                </a>
                <h2 class="title">麦尔奎斯后台管理系统</h2>
                <ul class="dx-nav">
                    <li>
                        <a href="https://github.com/Xuffy/layui-wms" target="_blank" style="color: #d8d8d8">欢迎您，@LoginHelper.UserName</a>
                    </li>
                    <li class="layui-this">
                        <span class="icon-moban162">
                            <i class="iconfont"></i>
                        </span>
                        <span>修改密码</span>
                    </li>
                    <li onclick="">
                        <span class="icon-moban163">
                            <i class="iconfont icon-tuichu"></i>
                        </span>
                        <span>退出登录</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            @Html.Action("leftmenu1", "menu")
        </div>
    </div>
    @RenderBody()
    <script>
        layui.use('element', function () {
            var element = layui.element(); //导航的hover效果、二级菜单等功能，需要依赖element模块

            //监听导航点击
            element.on('nav(demo)', function (elem) {
                //console.log(elem)
                //layer.msg(elem.text());
            });

            //监听导航点击
            element.on('nav(demolf)', function (elem) {

            });
        });
    </script>
</body>
</html>
