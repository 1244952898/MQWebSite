@model List<mq.model.dbentity.V_Shop_Area_User>

@if (Model != null && Model.Count > 0)
{
    foreach (var shop in Model)
    {
        <tr>
            <td>@shop.ID</td>
            <td>@shop.Name</td>
            <td>@shop.AreaName</td>
            <td>@shop.UserName</td>
            <td>@shop.Address</td>
            <td>@shop.Areas</td>
            <td>
                @if (shop.State == 0)
                {
                    <button type="button" class="layui-btn layui-btn-warm" onclick="Modify('@shop.ID');">营业中</button>
                }
                else
                {
                    <button type="button" class="layui-btn layui-btn-disabled" onclick="Modify('@shop.ID');">已撤销</button>
                }
            </td>
            <td>
                @if (shop.OpenDate != null)
                {
                    @shop.OpenDate.Value.ToString("yyyy/MM/dd hh:mm:ss")
                }
            </td>
            <td>
                <button type="button" class="btn btn-default btn-danger" onclick="Modify('@shop.ID');">修 改</button>
            </td>
            <td>
                <button type="button" class="btn btn-default btn-danger" onclick="DelData('@shop.ID');">删 除</button>
            </td>
        </tr>
    }
}
